{% extends "base.twig" %}

{% block content %}
    {% if post.home_banner_title or post.home_banner_content %}
        <section class="home-banner content-section">
            <div class="home-banner__inner content-section__content">
                {% if post.home_banner_title %}
                    <h2 class="home-banner__title">{{post.home_banner_title}}</h2>
                {% endif %}
                {% if post.home_banner_content %}
                    <p class="home-banner__content">{{post.get_field('home_banner_content')}}</p>
                {% endif %}
            </div>
        </section>
    {% endif %}

    <section class="home-widgets">
        {{widgets}}
    </section>


{% endblock %}